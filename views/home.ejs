<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="widtr=device-widtr, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css">
    <title>Home</title>
</head>
<body>
    <div class="container">
        <div class="quiz">
            <% data.forEach(quiz =>{%>
                <div class="quiz__item">
                    <h2 class="quiz__question"> <span class="quiz__question-number"> <%= quiz.question_number%> </span> <%= quiz.question%> ?</h2>
                    
                    <ul class="quiz__list-answer" data-numberquestion="<%= quiz.question_number%>">
                        
                         <% JSON.parse(quiz.answers).forEach( item=>{%>

                           <li class="quiz__answer" data-number=" <%= quiz.question_number%> "  data-correct="<%= item.correct%>"> <%= item.answer%> </li>

                        <% })%>

                    </ul>
                </div>
           
           <%})%>

        </div>
        <a href="#" class="quiz__btn btn"> send answers</a>
        <div class="quiz__result">
            <table class="quiz__table">
                <tr>
                    <td>number question</td>
                    <td> result</td>
                </tr>
                
            </table>
            <a href="#" class="quiz__reset btn"> send answers</a>
        </div>
    </div>
    
    <script src="/js/main.js"></script>
</body>
</html>